  console.log('ðŸ§  initializeTORI() called');
  
  try {
    // Try to use the main ELFIN engine first
    console.log('ðŸ§¬ Attempting to use main ELFIN++ engine...');
    
    let activeEngine = null;
    
    try {
      // Check if engine is working by getting scripts
      const scripts = elfinEngine.getScripts();
      activeEngine = elfinEngine;
      console.log('âœ… Main ELFIN++ engine working with', scripts.length, 'scripts');
    } catch (mainError) {
      console.warn('âš ï¸ Main ELFIN++ engine failed:', mainError);
      
      // Fallback to browser engine
      console.log('ðŸ”„ Falling back to browser ELFIN++ engine...');
      if (browserELFIN) {
        activeEngine = browserELFIN;
        console.log('âœ… Browser ELFIN++ engine available');
      } else {
        console.error('âŒ Browser ELFIN++ engine also unavailable');
        return false;
      }
    }
    
    // Expose to global scope for debugging - FORCED
    if (typeof window !== 'undefined') {
      console.log('ðŸŒ Exposing ELFIN++ to window object...');
      
      (window as any).ELFIN = activeEngine;
      (window as any).TORI = {
        elfin: activeEngine,
        conceptMesh,
        ghostPersona,
        testUpload: () => testELFIN(),
        checkStats: () => activeEngine?.getExecutionStats?.() || 'Engine not available',
        checkConcepts: () => localStorage.getItem('tori-concept-mesh'),
        checkDocs: () => localStorage.getItem('tori-scholarsphere-documents')
