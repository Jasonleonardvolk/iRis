      console.log('ðŸŒ TORI debugging interface exposed:');
      console.log('  - window.ELFIN (ELFIN++ Engine)');
      console.log('  - window.TORI (Full debug interface)');
      console.log('  - window.TORI.testUpload() (Manual test)');
      console.log('  - window.TORI.checkStats() (Engine stats)');
      console.log('  - window.TORI.checkConcepts() (Concept mesh)');
      console.log('  - window.TORI.checkDocs() (Documents)');
      
      // Verify the assignment worked
      if ((window as any).ELFIN) {
        console.log('âœ… window.ELFIN successfully assigned');
        
        // Test the interface immediately
        try {
          const testStats = (window as any).ELFIN.getExecutionStats();
          console.log('âœ… window.ELFIN interface test successful:', testStats);
        } catch (testError) {
          console.error('âŒ window.ELFIN interface test failed:', testError);
        }
      } else {
        console.error('âŒ window.ELFIN assignment failed');
        return false;
      }
    } else {
      console.warn('âš ï¸ Window object not available (SSR context)');
    }
    
    return true;
  } catch (error) {
    console.error('âŒ ELFIN++ initialization failed:', error);
